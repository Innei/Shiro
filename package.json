{
  "name": "____",
  "license": "GPL-3.0",
  "private": false,
  "version": "0.0.0",
  "engines": {
    "node": ">=14"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "next-pwa",
        "next"
      ]
    }
  },
  "bump": {
    "before": [
      "git pull --rebase",
      "ni"
    ],
    "changelog": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --ignore-path ./.gitignore --write "
    ],
    "config.init.yaml": [
      "npm run gen-config && git add src/configs.default.ts"
    ]
  },
  "scripts": {
    "start": "npm run dev",
    "prebuild": "rimraf .next",
    "dev": "cross-env NODE_ENV=development next dev -p 2323",
    "analyze": "cross-env NODE_ENV=production ANALYZE=true BUNDLE_ANALYZE=browser next build",
    "build": "cross-env NODE_ENV=production next build",
    "build:ci": "cross-env NODE_ENV=production CI=true next build",
    "lint": "eslint --ext .ts,.tsx --ignore-path .gitignore . --fix",
    "prod:pm2": "cross-env NODE_ENV=production pm2 restart ecosystem.config.js",
    "prod:pm2-alone": "cross-env NODE_ENV=production pm2 restart ecosystem.standalone.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:reload": "pm2 reload ecosystem.config.js"
  },
  "browserslist": [
    "chrome >=94",
    "safari >=14",
    "last 2 Firefox versions"
  ],
  "dependencies": {
    "@floating-ui/react-dom": "2.0.0",
    "@mx-space/api-client": "1.4.0",
    "@tanstack/react-query": "4.29.12",
    "axios": "1.4.0",
    "dayjs": "1.11.8",
    "framer-motion": "^10.12.16",
    "immer": "^10.0.2",
    "js-cookie": "3.0.5",
    "lodash-es": "4.17.21",
    "markdown-escape": "2.0.0",
    "markdown-to-jsx": "npm:@innei/markdown-to-jsx@7.1.3-beta.2",
    "next": "13.4.4",
    "next-themes": "0.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-intersection-observer": "9.4.4",
    "react-toastify": "9.1.3",
    "remove-markdown": "0.5.0",
    "socket.io-client": "4.6.2",
    "validator": "13.9.0"
  },
  "devDependencies": {
    "@iconify/tailwind": "0.1.3",
    "@innei/eslint-config-react-ts": "0.10.1",
    "@innei/prettier": "0.10.1",
    "@next/bundle-analyzer": "13.4.4",
    "@types/color": "3.0.3",
    "@types/js-cookie": "3.0.3",
    "@types/lodash-es": "4.17.7",
    "@types/markdown-escape": "1.1.0",
    "@types/node": "20.2.5",
    "@types/react": "18.2.9",
    "@types/react-dom": "18.2.4",
    "@types/remove-markdown": "0.3.1",
    "@types/validator": "13.7.17",
    "autoprefixer": "10.4.14",
    "color": "4.2.3",
    "cross-env": "7.0.3",
    "dotenv": "16.1.4",
    "eslint": "8.42.0",
    "husky": "8.0.3",
    "js-yaml": "4.1.0",
    "lint-staged": "13.2.2",
    "postcss": "8.4.24",
    "postcss-import": "15.1.0",
    "postcss-nested": "6.0.1",
    "postcss-preset-env": "8.4.2",
    "postcss-prune-var": "1.1.1",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "tailwindcss": "^3.3.2",
    "tailwindcss-variable-colors": "0.0.1",
    "tilg": "0.1.1",
    "typescript": "5.1.3",
    "typewind": "^0.1.3",
    "zx": "7.2.2"
  },
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "showDetails": true
  }
}
